{{#if showAlert}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	Thêm thành công
</div>
{{/if}}

<form action="" method="POST" role="form">
	<div class="form-group">
		<label for="">Tên</label>
		<input type="text" class="form-control" id="" name="ProName" placeholder="Tên sản phẩm">
	</div>
	<div class="form-group">
		<label for="">Mô tả</label>
		<input type="text" class="form-control" id="" name="Description" placeholder="Mô tả sản phẩm">
	</div>
	<div class="form-group">
		<label for="">Giá tiền</label>
		<input type="text" class="form-control" id="" name="Price" placeholder="Giá tiền sản phẩm">
	</div>
	<div class="form-group">
		<label for="">Số lượng</label>
		<input type="text" class="form-control" id="" name="Quantity" placeholder="Số lượng sản phẩm">
	</div>
	<div class="form-group">
		<label for="">Cate ID</label>
		<input type="text" class="form-control" id="" name="CatID" placeholder="Cate ID sản phẩm">
	</div>
	<div class="form-group">
		<label for="">Brand ID</label>
		<input type="text" class="form-control" id="" name="BrandID" placeholder="Brand ID sản phẩm">
	</div>
	<a class="btn btn-outline-secondary viewlist" href="/admin/product" role="button">
		<i class="fa fa-arrow-left" aria-hidden="true"></i>
		View list
	</a>
	<button type="submit" class="btn btn-success">
		<i class="fa fa-check" aria-hidden="true"></i>
		Save
	</button>
</form>